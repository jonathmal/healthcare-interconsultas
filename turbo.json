{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", "**/.env.*local"],  // Added local env files
  "tasks": {  // "tasks" is correct (newer than "pipeline")
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**", 
        ".next/**",
        "!.next/cache/**"  // Exclude Next.js cache
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {  // Added clean task
      "cache": false
    }
  }
}